# Environment Configuration for SHAKTI Ticket Sender
# Copy this file to .env and update with your actual values

# Email Configuration
EMAIL_USER=official@acesmitadt.com
EMAIL_PASS=your_email_password_here
EMAIL_HOST=acesmitadt.com
EMAIL_PORT=465
EMAIL_SECURE=true

# MongoDB Configuration
# For local MongoDB installation:
MONGODB_URI=mongodb://localhost:27017/shakti_tickets

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shakti_tickets?retryWrites=true&w=majority

# For MongoDB with authentication:
# MONGODB_URI=mongodb://username:password@localhost:27017/shakti_tickets

# Event Configuration
EVENT_NAME=SHAKTI
EVENT_DATE=2025-10-15
EVENT_TIME=10:00 AM
EVENT_VENUE=MIT Academy of Engineering, Alandi
ORGANIZER=ACES MIT ADT

# Sender Information
FROM_NAME=ACES MIT ADT
FROM_EMAIL=official@acesmitadt.com

# QR Code Settings
QR_CODE_SIZE=200
TICKET_ID_PREFIX=SHAKTI2025